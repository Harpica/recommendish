# Stage 1
FROM node:16 as build-stage

WORKDIR /client
COPY package.json .
RUN npm install
COPY . .

ARG REACT_APP_BASE_URL
ARG REACT_APP_SERVER_PORT
ARG REACT_APP_CLIENT_PORT
ARG REACT_APP_SOCIALS_GITHUB_ID
ARG REACT_APP_SOCIALS_GITHUB_SECRET
ARG REACT_APP_SOCIALS_TWITTER_APP_KEY
ARG REACT_APP_SOCIALS_TWITTER_ID
RUN npm run build $REACT_APP_BASE_URL $REACT_APP_SERVER_PORT $REACT_APP_CLIENT_PORT $REACT_APP_SOCIALS_GITHUB_ID $REACT_APP_SOCIALS_GITHUB_SECRET $REACT_APP_SOCIALS_TWITTER_APP_KEY $REACT_APP_SOCIALS_TWITTER_ID

# Stage 2
FROM nginx:1.17.0-alpine

COPY --from=build-stage /client/build /usr/share/nginx/html
COPY --from=build-stage /client/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80

CMD nginx -g 'daemon off;'